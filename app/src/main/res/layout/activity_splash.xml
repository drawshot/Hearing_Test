<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newsplashbackground"
    tools:context=".Splash">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignEnd="@+id/btn_sub"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_sub"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="8dp"


        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/newsplashlogo"
        app:layout_constraintBottom_toTopOf="@+id/horizenguideline2"
        app:layout_constraintLeft_toLeftOf="@+id/verticalguideline1"
        app:layout_constraintRight_toLeftOf="@+id/verticalguideline2"
        app:layout_constraintTop_toTopOf="@+id/horizenguideline1" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verticalguideline1"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verticalguideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.89" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizenguideline1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizenguideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/verticalguideline1"
        app:layout_constraintRight_toLeftOf="@+id/verticalguideline2"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/horizenguideline2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.522" />


</android.support.constraint.ConstraintLayout>
